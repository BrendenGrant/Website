@*@Model Website.Models.Product*@

@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Product</h2>


<div>
    <header class="header"></header>
</div>
<div class="div-block"></div>
<div class="add_remove"><a href="#" class="button_remove w-button">x</a><a href="#" class="button_add w-button">+</a></div>

<div class="container">
    <div id="myCarousel" class="carousel" data-ride="carousel" data-interval="5000">



        <!-- Wrapper for slides -->
        <div class="carousel-inner">


            @{ int i = 0;
                foreach (var item in Model)
                {

                    <div class="item">
                        <img src="@item.LargeImage" alt="Product" >

                        @* <div class="carousel-caption">
                                <b>@item.Title</b><br />
                                <i>@item.OtherInfo</i>
                            </div>*@
                    </div>
                    if (i == 0)
                    {<div class="item active">
                <img src="@item.LargeImage" alt="Product" >
                @*   <div class="carousel-caption">
                        <b>@item.Title</b><br/>
                        <i>@item.OtherInfo</i>
                    </div>*@
            </div>
                        i++;
                    }

                }}
        </div>

        <!-- Left and right controls left carousel-contr-->
        <a class="carousel-control-prev " href="#myCarousel" data-slide="prev"> 
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

